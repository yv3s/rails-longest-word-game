<div class="container">
  <div class="letter-container">
    <h1>New Game</h1>
    <div class="row">
      <div class="col-lg-12">
        <% @letters.each do |letter| %>
          <h3><%= letter %></h3>
        <% end %>
      </div>
    </div>
  </div>

  <div class="submit-form center-div">
    <form class="form-inline" action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-group">
        <label for="question">Your longest word?</label>
        <input type="text" id="question" name="word" class="form-control" maxlength="10" placeholder="Ex: ABCDEFGHI">
      </div>
      <input id="hidden_letter" name="grid" type="hidden" value= '<%= @letters.reduce(:+) %>'>
      <button type="submit" class="btn btn-secondary">Play</button>
    </form>
  </div>
</div>

